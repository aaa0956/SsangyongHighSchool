<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical" >
    
	<ImageView
		android:id="@+id/image"
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:src="@drawable/image"
    	android:visibility="invisible" />
	
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">
		
		<ImageButton
			android:id="@+id/school"
			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:background="@drawable/btn_school_default"/>

	    <ImageButton
        	android:id="@+id/calendar"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="30dp"
       		android:background="@drawable/btn_calendar_default" />

	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">

		<ImageView
			android:id="@+id/text1"
			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_marginTop="1dp"
  			android:src="@drawable/txt_intro"/>

	    <ImageView
        	android:id="@+id/text2"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="1dp"
        	android:layout_marginLeft="30dp"
        	android:src="@drawable/txt_calendar" />
	        
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="3dp"
		android:gravity="center">
	    
		<ImageButton
			android:id="@+id/clock"
			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:background="@drawable/btn_clock_default"/>

	    <ImageButton
        	android:id="@+id/food"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="30dp"
        	android:background="@drawable/btn_food_default" />

	    
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">

		<ImageView
			android:id="@+id/text4"
			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_marginTop="1dp"
  			android:src="@drawable/txt_clock" />

	    <ImageView
        	android:id="@+id/text5"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="1dp"
        	android:layout_marginLeft="30dp"
        	android:src="@drawable/txt_food" />

  
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">

		<ImageButton
	        android:id="@+id/call"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_call_default" />
		

	    <ImageButton
	    	android:id="@+id/facebook"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="30dp"
	   		android:background="@drawable/btn_facebook_default"/>
	</LinearLayout>
	
	<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">

		<ImageView
			android:id="@+id/text6"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	    	android:layout_marginTop="3dp"
	    	android:src="@drawable/txt_call" /> 

	    <ImageView
        	android:id="@+id/text5"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="1dp"
        	android:layout_marginLeft="30dp"
        	android:src="@drawable/txt_facebook" />
  
	</LinearLayout>
	
	<ImageView
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="1"
    	android:src="@drawable/bar" />	
    	
	<ImageView
		android:id="@+id/top"
		android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:src="@drawable/top" />
		    
	    	
</LinearLayout>